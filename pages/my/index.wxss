.header{display: flex; flex-direction: column; align-items: center; padding: 20px 0px;}
.header image{width: 79px; height: 79px; border-radius: 50%;}
.header_name{font-size: 20px; font-weight: 700; margin: 5px 0px;}
.header_desc{font-size: 14px; color: #666;}
.line{width: 100%; height: 10px; background-color: #f6f6f6;}
.menu_item{display: flex; position: relative; flex-direction: row; justify-content: space-between; align-items: center; color: #666; padding: 0px 30px; height: 50px; font-size: 14px; border: #f6f6f6 1px solid;}
.isinfo{position: absolute; width: 8px; height: 8px; border-radius: 4px; background-color: #ff0000; margin: -8px 0px 0px -8px;}
.menu_item image{width: 20px;}
.logoutbuttom{position: fixed; border-radius: 0px; bottom:50px; width:100%; height: 50px; background-color: #f98a9a; color: #fff; line-height: 50px; z-index:500; font-size: 15px; font-weight: 700;}