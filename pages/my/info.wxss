page{background-color: #eee;}
.header{display: flex; background: #fff; flex-direction: row; align-items: center; padding: 20px 20px;}
.header image{width: 60px; height: 60px; border-radius: 50%;}
.header view{display: flex; flex-direction: column; margin-left: 20px;}
.header_name{font-size: 18px; font-weight: 700;}
.header_desc{font-size: 14px; color: #666;}
.menu_item{display: flex; background: #fff; margin-top: 10px; flex-direction: row; justify-content: space-between; align-items: center; color: #333; padding: 0px 20px; height: 50px; font-size: 14px; border: #f6f6f6 1px solid;}
.menu_item view{display: flex; align-items: center;}
.menu_item view image{width: 32px; margin-right: 5px;}
.menu_item image{width: 20px;}
.basic-info{position: relative;}
.isinfo{position: absolute; width: 8px; height: 8px; border-radius: 4px; background-color: #ff0000; margin: -8px 0px 0px -4px;}