<form bindsubmit="login">
  <view class="container">
    <image mode="widthFix" style="width:180px; height:180px;" src="https://cdn.lessonplan.cn/Public/IMG/logo-single.svg"></image>
    <text class="h1 c555 mt-logo bold">课玩</text>
    <text class="logo_title">开始快乐的学习吧</text>
    <input name="username" class="input" type="text" placeholder="请输入手机号码"></input>
    <input name="password" class="input" type="text" password="true" placeholder="请输入密码"></input>
    <button form-type="submit" class="button1">确　　定</button>
    <button class="button2" bindtap="welogin">微信登录</button>
    <view class="other">
      <navigator class="a" url="/pages/register/index">注册</navigator>
      <navigator class="a" url="/pages/password/find">忘记密码</navigator>
    </view>
  </view>
</form>