.topbar{position: fixed; top: 0; background: #ffffff; display: flex; flex-direction: row; width:calc(100% - 40px); height: 50px; padding: 0 20px; border-top: 1px solid #ccc; border-bottom: 1px solid #ccc; align-items: center; justify-content: space-between;}
.hanlder-item{display: flex; flex-direction: column; align-items: center;}
.hanlder-item image{width: 28px;}
.hanlder-item text{font-size: 12px; color: #999;}
.choose-class{display: flex; flex-direction: row; align-items: center;}
.choose-class text{font-size: 16px; color: #666;}
.choose-class image{width: 20px; margin-left: 3px;}
.class-item{display: flex; flex-direction: row; justify-content: space-between; align-items: center; padding: 15px 30px; border-bottom: 1px solid #ccc;}
.class-item .name{font-size: 18px; color: #333;}
.class-item .desc{font-size: 12px; color: #999;}