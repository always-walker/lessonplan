.container{padding: 20px; display: flex; flex-direction: column;}
.cover{width: 100%; height: 150px;}
.clas-name{width: 100%; font-size: 24px; font-weight: 700; color: #333; margin-top: 20px; padding-bottom: 10px; border-bottom: 1px solid #ccc;}
.class-info{width: 100%; margin-top: 15px; font-size: 14px; color: #333;}
.container button{width: 100%; height: 50px; border-radius: 6px; margin-top: 15px; font-weight: 700; font-size: 24px; line-height: 50px;}
.button-join{ background-color: #f88a99; box-shadow: 0px 3px 0px #e8719f; color: #fff;}
.button-disabled{ background-color: #f5f5f5; box-shadow: 0 3px 0 #eee; color: #999;}