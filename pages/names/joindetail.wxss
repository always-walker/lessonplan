page{height: 100%; display: flex; flex-direction: column; align-items: center;}
.container{width:100%; padding:0px 20px; display: flex; flex-direction: column;}
.cover{width: 50%; padding: 10px; border: 1px solid #ccc;}
.cover image{width: 100%;}
.class-tips{width: 100%; text-align: center; margin-top: 15px; font-size: 14px; color: #666;}
.class-name{width: 100%; text-align: center; font-size: 20px; font-weight: 700; color: #333; margin-top: 5px;}
.container button{width: 120px; border-radius: 20px; margin: 30px 0px 40px 0px; font-size: 14px; background-color: #e05c99; color: #fff;}
.class-a{text-decoration: underline; color: #f88a99; font-size: 14px; margin-top: 5px;}