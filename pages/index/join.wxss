.class-search{background: #fff; width: 100%; height: 100%; position: fixed; top: 0px; left: 0px; z-index: 100; display: flex; flex-direction: column; align-items: center;}
.search-content{display: flex; flex-direction: column; height: 90%; width: 70%; align-items: center; justify-content: center;}
.search-content input{width: 100%; font-size: 12px; border: 1px solid #eee; text-align: center; padding: 6px 0px; border-radius: 20px;}
.search-content button{background-color:#e05c99; color: #fff; font-size: 14px; border-radius: 20px; width: 100%; margin-top: 10px;}