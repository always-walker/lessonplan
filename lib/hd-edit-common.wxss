page{background: #eee; display: flex; flex-direction: column; align-items: center;}
form{width: calc(100% - 30px);}
.btn-underline{margin-top: 20px; border-bottom: 1px solid #999; color: #999; line-height: 24px;} 
.hdTitle{border-radius: 5px; width: calc(100% - 30px); margin-top: 15px; background: #fff;}
.hdTitle text{width: calc(100% - 20px); padding: 0px 10px; text-align: center; border-bottom: 1px solid #eee; font-size: 16px; line-height: 44px; white-space: nowrap; text-overflow: ellipsis; overflow: hidden;}
.hdForm{width: 100%; align-items: flex-start; font-size: 16px;}
.hdForm input{width: calc(100% - 20px); padding: 10px; border-radius: 5px; background: #fff; margin-bottom: 10px;}
.hdFormTextArea{border-radius: 5px; padding: 10px; width: calc(100% - 20px); background: #fff;}
.hdFormTextArea textarea{width:100%;}
.hdFormTextArea .enable-input{width: 100%; text-align: right; line-height: 24px;}
.subquestion{width:100%; font-size: 14px;}
.child-item{width: 100%; margin-bottom: 8px;}
.child-item text{width: calc(100% - 10px); text-align: center; padding: 5px; color: #fff; border-top-left-radius: 5px; border-top-right-radius: 5px;}
.child-item textarea{width: calc(100% - 10px); height: 80px; background-color: #fff; padding: 5px; border-bottom-left-radius: 5px; border-bottom-right-radius: 5px;}
.btnSubmit{border-radius: 5px; margin-top: 10px; background: #df5b98; color: #fff; font-size: 16px; line-height: 44px;}
.question-title{font-size: 16px; margin: 20px 0px 10px 0px;}
.upload-image{width: 100px; height: 100px; border-radius: 5px; background: #ddd;}
.upload-image-success{width: 100px; height: 100px; border-radius: 5px; background: #ddd;}
.upload-image::before{content: "+"; color: #2c3e50; width: 100px; text-align: center; position:absolute; margin-top: 25px; font-size: 32px; line-height: 32px;}
.upload-image::after{content: "添加图片"; color: #000; width: 100px; text-align: center; position:absolute; margin-top: -43px; font-size: 12px; line-height: 14px;}