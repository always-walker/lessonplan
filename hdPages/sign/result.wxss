page{height: 100%;}
.scrollbody{width: calc(100% - 30px); padding: 0px 15px; border-top: 1px solid #e2e2e2; font-size: 14px;}
.table-title{display: flex; flex-direction: row; width: 100%; justify-content: space-between; 
padding-top: 15px;}
.table-row{display: flex; flex-direction: row; width: 100%; justify-content: space-between; margin-top: 15px;}
.table-stat{color: #999; margin-top: 8px;}
.table-title text,.table-row text,.table-row view{text-align: center;}
.item-no{width: 15%;}
.item-name{width: 21%;}
.item-status{width: 16%;}
.item-status image{width: 18px;}