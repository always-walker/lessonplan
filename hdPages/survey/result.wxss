page{background: #eee; display: flex; flex-direction: column; align-items: center;}
.result-item{width: calc(100% - 30px); justify-content: left; margin-top: 5px; }
.item-name{width:100%; font-size: 14px;}
.item-percent{background: #fff; border-radius: 8px; width: 100%; height: 20px;}
.item-percent view{background: #df5b98; border-radius: 8px; height: 20px;}
.item-intro{text-align: right; width: 100%;}
.question-list{position: fixed; top: 0px; background: #fff; width: calc(100% - 30px); padding: 15px; border-top: 1px solid #e2e2e2;}
.question-no-list{white-space: nowrap; text-align: center;}
.question-no-list text{display: inline-block; background: #999; color: #fff; font-size: 16px; border-radius: 5px; padding: 5px; margin: 0px 10px;}
.question-no-list text.active{background: #df5b98;}
.question-title{font-size: 14px; color: #df5b98;  margin-top: 10px; }
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}