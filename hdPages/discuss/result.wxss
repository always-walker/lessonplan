page{background: #eee; display: flex; flex-direction: column; align-items: center;}
.container{padding: 0px 15px;}
.result-item{display: flex; flex-direction: row; width: calc(100% - 30px); justify-content: left; margin-top: 15px;}
.result-item image{width: 12px; margin-top: 15px;}
.item-name{width: 50px; font-size: 14px; margin-top: 10px;}
.item-content{padding: 10px; background: #fff; border-radius: 5px; width: calc(100% - 82px); font-size: 14px;}
.item-content view{margin-top:5px;}
.item-content image{width: 45px; height: 45px; margin-top: 0px;}
.falls-content{column-count: 2; column-gap: 15px; width: calc(100% - 30px); padding-top: 15px;}
.falls-item{position: relative; background-color: #fff; margin-bottom: 15px; border-radius: 5px; break-inside: avoid;}
.falls-item image{width: 100%; border-top-left-radius: 5px; border-top-right-radius: 5px;}
.falls-item text{display: block; line-height: 18px; color: #333; font-size: 14px; padding: 5px 10px; word-break: break-all;}
.falls-item text.falls-item-name{font-weight: bold; padding-top: 10px;}
.falls-item text.falls-item-content{padding-bottom: 10px;}