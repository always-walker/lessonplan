page{background: #eee; display: flex; flex-direction: column; align-items: center;}
.questionlist{width: calc(100% - 30px); align-items: flex-start;}
.answer-name{font-size: 14px; margin-top: 20px;}
.answer-content{width: calc(100% - 20px); border-radius: 5px; background: #fff; padding: 10px; margin-top: 10px; font-size: 14px;}
.answer-content-item{align-items: flex-start; margin-bottom: 5px; line-height: 20px;}
.answer-content-item-content{margin-left: 1em;}
.question-list{position: fixed; top: 0px; background: #fff; width: 100%; border-top: 1px solid #e2e2e2;}
.question-list scroll-view{width: calc(100% - 30px); white-space: nowrap; text-align: center;}
.question-list scroll-view view{padding: 15px 10px; display: inline-block;}
.question-list scroll-view view text{display: inline-block; background: #999; color: #fff; font-size: 16px; border-radius: 5px; padding: 5px;}
.question-list scroll-view view text.active{background: #df5b98;}
.question-title{font-size: 14px; color: #df5b98; margin-bottom: 15px;}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.question-child{width: 100%; white-space: nowrap;}
.question-child view{display: inline-block; width: 140px; height: 50px; line-height: 45px; border-top: 1px solid #ddd; border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; background-color: #fff; text-align: center;}
.question-child view text{color: #333;}
.question-child view.active{background-color: #f0f0f0;}
.question-child view.active > text{color: #976ce7;}
.question-list-2{width: calc(100% - 30px); margin-top: 15px;}
.question-list-2-title{text-align: center; background-color: #976ce7; color: #fff; border-top-left-radius: 5px; border-top-right-radius: 5px; line-height: 40px}
.question-list-2-item-content{background-color: #fff; padding: 15px;}
.question-list-2-item{margin-bottom: 10px;}
.question-list-2-item text{display: block; line-height: 20px; font-size: 14px;}
.question-list-2-item-name{color: #976ce7;}
.question-list-2-item-text{color: #333;}
