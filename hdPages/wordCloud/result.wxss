page{background: #eee;}
.container{padding: 0px 15px;}
.word-title{width:calc(100% - 46px); font-size: 14px; font-weight: bold; padding: 8px 8px 2px 8px; color: #df5b98; justify-content: space-between; margin-top: 10px;}
.word-title text,.word-item text{text-align: center;}
.word-item{width:calc(100% - 46px); padding: 8px; font-size: 14px; border-radius: 5px; background: #fff; color: #333; justify-content: space-between; margin-top: 5px;}
.word-item .red{color: #df5b98; min-width: 56px;}
.word-item .sort{min-width: 28px;}