/**app.wxss**/
.container {display: flex; flex-direction: column; height: 100%; align-items: center; justify-content: center; box-sizing: border-box;} 
tabbar{position: fixed; bottom:0; width:100%; height: 50px; z-index:500;}
.mt8{margin-top: 8px;}
.ml8{margin-left: 8px;}
.mr5{margin-right: 5px;}
.h1{font-size: 24px;}
.h3{font-size: 17px;}
.c555{color: #555;}
.c3{color: #333;}
.c9{color: #999;}
.cf{color: #fff;}
.bold{font-weight: bold;}
.row{display: flex; flex-direction: row; align-items: center;}
.column{display: flex; flex-direction: column; align-items: center;}
.row-sb{display: flex; flex-direction: row; align-items: center; justify-content: space-between;}
radio text,checkbox text{margin-left: 5px;}
radio .wx-radio-input {width: 40rpx; height: 40rpx; border: 4rpx solid #999; border-radius: 100%; background: none;}
radio .wx-radio-input.wx-radio-input-checked {border: 4rpx solid #df5b98!important; background: #df5b98!important;}
radio .wx-radio-input.wx-radio-input-checked::before {width: 60%; height: 60%; background: #fff!important; border-radius: 100%; content: ''; transform: translate(-50%, -50%) scale(1); -webkit-transform: translate(-50%, -50%) scale(1);}
checkbox .wx-checkbox-input {width: 40rpx; height: 40rpx; border: 4rpx solid #999; background: none;}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {border: 4rpx solid #df5b98!important; background: #df5b98!important;}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {width: 60%; height: 60%; background: #fff!important; content: ''; transform: translate(-50%, -50%) scale(1); -webkit-transform: translate(-50%, -50%) scale(1);}